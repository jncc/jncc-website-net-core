@using JNCC.PublicWebsite.Core.ViewModels 
@model IArticlesImageGallerySectionViewModel
@{
    int counter = 0;
}


<div class="row space-below">
    @foreach (var image in Model.Images)
    {
      counter += 1;
      <div class="column">
        <img src="@image.ThumbnailImageUrl" onclick="openModal();currentSlide(@counter)" alt="@image.AlternativeText" title="@image.TitleText" class="hover-shadow cursor">
      </div>
    }

</div>


    @{
        counter = 0;
     }

<div id="myModal" class="modal">
  <span class="close cursor" onclick="closeModal()">&times;</span>
  <div class="modal-content">

    @foreach (var image in Model.Images)
    {
        counter += 1;
        <div class="mySlides">
          <img onclick="openModal();currentSlide(@counter)" src="@image.Url" alt="@image.AlternativeText" title="@image.TitleText" class="image-model">
        </div>
    }
    
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

  </div>
</div>
