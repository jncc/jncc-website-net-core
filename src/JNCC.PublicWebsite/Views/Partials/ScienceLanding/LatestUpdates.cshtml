@using JNCC.PublicWebsite.Core.ViewModels
@model ScienceLatestUpdatesSectionViewModel
@if (Model.Pages?.Any() ?? false)
{
    <section class="articles-section resources latest-updates">
        <div class="container">
            <h2 style="margin-bottom:2rem">Latest updates</h2>
            <div class="row row1">
                @foreach (var item in Model.Pages)
                {
                    <div class="columns small-12 medium-4">
                        <div class="card">
                            <div class="card-section">
                                <a href="@item.ReadMoreLink.Url" target="@item.ReadMoreLink.Target">
                                    <h3>@item.Title</h3>
                                    @item.Content
                                </a>
                                <a href="@item.ReadMoreLink.Url" class="button expanded" target="@item.ReadMoreLink.Target">Read @item.ReadMoreLink.Text</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (Model.AToZPageLink != null)
            {
                <div class="row">
                    <div class="columns small-12 medium-6 medium-push-3">
                        <a href="@Model.AToZPageLink.Url" target="@Model.AToZPageLink.Url" class="button expanded">@Model.AToZPageLink.Text</a>
                    </div>
                </div>
            }
        </div>
    </section>
}