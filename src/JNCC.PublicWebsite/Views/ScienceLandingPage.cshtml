@using JNCC.PublicWebsite.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ScienceLandingPage>
@{
    Layout = "Master.cshtml";
}
<main id="main" class="science-landing landing-page">
    @(await Component.InvokeAsync("PageHero", new { model = Model }))
    <div class="container">
        @(await Component.InvokeAsync("Breadcrumbs", new { model = Model }))
        @(await Component.InvokeAsync("NoPageHeroHeadline", new { model = Model }))
        @(await Html.PartialAsync("~/Views/Partials/PageAlert.cshtml", Model.PageSpecificAlertContent))
    </div>

    @(await Html.PartialAsync("~/Views/Partials/ScienceLanding/FeaturedQuote.cshtml"))
    @(await Component.InvokeAsync("VerticalAccordionMenu", new { model = Model }))
    
	@if (Model.AToZpageLink != null)
    {
	   <div class="row">
		    <div class="columns small-12 medium-6 medium-push-3">
			    <a href="@Model.AToZpageLink.Url" target="@Model.AToZpageLink.Url" class="button expanded">@Model.AToZpageLink.Name</a>
		    </div>
	    </div>
    }

    @(await Component.InvokeAsync("ScienceLandingLatestUpdates", new { model = Model }))
    @(await Component.InvokeAsync("ResourcesCollections", new { model = Model }))
    @(await Component.InvokeAsync("LatestNewsAndSocialFeed", new { model = Model }))
</main>